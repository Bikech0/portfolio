    <div id="services">
        <div class="container">
            <h1 class="sub-title">My Services</h1>
            <div class="services-list">
                <% for (let i=0; i<services.length; i++){%>
                    <div>
                        <i class="<%= services[i].icon %>""></i>
                        <h2><%= services[i].name %></h2>
                        <p><%= services[i].desc %></p>
                        <a href="#services">learn more</a>
                    </div>
                <%}%>
            </div>
        </div>
    </div> -->

    <!-- Portfolio -->


    <div id="portfolio">
        <div class="container">
            <h1 class="sub-title">My Work</h1>
            <div class="work-list">
                <% for (let i=work.length-1; i>=0; i--){%>
                    <%if (i<3){%>
                        <div class="work">
                            <img src=<%= work[i].img_src %> alt="">
                            <div class="layer">
                                <h3><%= work[i].title %></h3>
                                <p><%= work[i].desc %></p>
                                <a href=<%= work[i].link %>><i class="fa-solid fa-up-right-from-square"></i></i></a>
                            </div>
                        </div>
                    
                    <%}else{%>
                        <div class="work moreBox" style="display: none;">
                            <img src=<%= work[i].img_src %> alt="">
                            <div class="layer">
                                <h3><%= work[i].title %></h3>
                                <p><%= work[i].desc %></p>
                                <a href=<%= work[i].link %>><i class="fa-solid fa-up-right-from-square"></i></i></a>
                            </div>
                        </div>
                    <%}%>
                <%}%>
            </div>
                
            <a href="#portfolio" class="btn" id="loadMore">See more</a>
        </div>
    </div>

    <!-- Contact -->

    <div id="contact">
        <div class="container">
            <div class="row">
                <div class="contact-left">
                    <h1 class="sub-title">
                        Contact Me
                    </h1>
                    <p> <i class="fa-sharp fa-solid fa-paper-plane"></i> <a class="mail" href="mailto: " <%= contact.mail %>><%= contact.mail %></a> </p>
                    <p> <i class="fa-solid fa-square-phone"></i> <%= contact.phone %></p>
                    <div class="social-icons">
                        <a href=<%= contact.fb %>><i class="fa-brands fa-facebook"></i></a>
                        <a href=<%= contact.li %>><i class="fa-brands fa-linkedin"></i></a>
                        <a href=<%= contact.gh %>><i class="fa-brands fa-github"></i></a>
                    </div>
                    <a href="./images/CV.pdf" download class="btn btn2">Download CV</a>
                </div>
                <div class="contact-right">
                    <form name='contact-form' method="post" action="/contact">
                        <input id="name" type="text" name="Name" placeholder="Your name" required>
                        <input id="email" type="email" name="Email" placeholder="Your email" required>
                        <textarea id="message" name="Message" rows="6" placeholder="Your message"></textarea>
                        <button type="submit" class="btn btn2">Submit</button>
                    </form> 
                    <span id="msg"></span>
                </div>
            </div>
        </div>
        <div class="copyright">
            <p> Created By <a class="copy" href="#">Mohamed Toumi</a> | <i class="fa-regular fa-copyright"></i> 2023 All rights reserved.</p>
        </div>
    </div>

    <!-- JS -->

    <script src="animated.js"></script>

</body>
</html>