<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/x-icon" href="./images/favicon.ico">
    <link rel="stylesheet" href="styles.css">
    <link href="https://fonts.cdnfonts.com/css/curbstone" rel="stylesheet">
    <title>My Personal Portfolio</title>
    <script src="https://code.jquery.com/jquery-3.6.3.js" integrity="sha256-nQLuAZGRRcILA+6dMBOvcRh5Pe310sBpanc6+QBmyVM=" crossorigin="anonymous"></script>
    <script src="load-more-button.js"></script>
    <script src="https://kit.fontawesome.com/77eaad2351.js" crossorigin="anonymous"></script>
    
</head>
<body>

    <div id="header">
        <div class="container">
            <nav>
                <div class="logo"></div>
                <ul id="side-menu">
                    <li><a href="#header">Home</a></li>
                    <li><a href="#about">About</a></li>
                    <!-- <li><a href="#services">Services</a></li> -->
                    <li><a href="#portfolio">Projects</a></li>
                    <li><a href="#contact">Contact</a></li>
                    <i class="fas fa-times" onclick="close_menu()"></i>
                </ul>
                <i class="fas fa-bars" onclick="open_menu()"></i>
            </nav>
            <div class="header-text">
                <h1>Hi, I'm <span>Mohamed</span></h1>
                <span class="text first-text">I'm a </span>
                <span class="text sec-text">Computer Scientist</span>
            </div>
        </div>
    </div>

    <!-- ABOUT -->

    <div id="about">
        <div class="container">
            <div class="row">
                <div class="about-col-1">
                    <img src="./images/me9.png" alt="">
                </div>
                <div class="about-col-2">
                    <h1 class="sub-title">About Me</h1>
                    <p class="who-am-i"><%= whoami[0].intro %></p>
                    <div class="tab-titles">
                        <p class="tab-links active-link" onclick="opentab('skills')">Skills</p>
                        <p class="tab-links" onclick="opentab('experience')">Experience</p>
                        <p class="tab-links" onclick="opentab('education')">Education</p>
                        <p class="tab-links" onclick="opentab('books')">Books</p>
                    </div>
                    <div class="tab-contents active-tab" id="skills">
                        <ul>
                            <% for (let i=0; i<skills.length; i++){%>
                                <li>
                                    <span><%= skills[i].span %></span>
                                    <% for (let j=0; j<skills[i].desc.length; j++){%>
                                        <p class="description"><%= skills[i].desc[j] %></p>
                                    <%}%>
                                </li>
                            <%}%>
                        </ul>
                    </div>
                    <div class="tab-contents" id="experience">
                        <ul>
                            <li><span><%= volunWork[0].span %></span></li>
                            <% for (let i=0; i<volunWork[0].desc.length; i++){%>
                                <li>
                                    <% if (i<3) {%>
                                        <div>
                                            <p class="description"><%= volunWork[0].desc[i] %></p>
                                        </div>
                                    <%}else{%>
                                        <div class="clubs" style="display: none;">
                                            <p class="description"><%= volunWork[0].desc[i] %></p>
                                        </div>
                                    <%}%>
                                </li>
                            <%}%>
                            <a href="#about" class="btn" id="loadMoreClubs">See more</a>
                            <li>
                                <span>Personal Projects</span>
                                <br><br>
                                <a class="proj" href="#portfolio">Check out my github or My Work section</a>
                            </li>
                            <li>
                                <span>Problem Solving</span>
                                <br><br>
                                <p class="ps"><i class="fa-solid fa-lightbulb"></i> Competitive Programming Competitions</p>
                                <br>
                                <% for (let i=0; i<cp_comp.length; i++){%>
                                    <% if (i<3) {%>
                                        <div>
                                            <p><i class="fa-solid fa-trophy"></i> name: <%= cp_comp[i].name %> </p>
                                            <br>
                                            <p><i class="fa-solid fa-user"></i> host: <%= cp_comp[i].host %> </p>
                                            <br>
                                            <p><i class="fa-solid fa-medal"></i> rank: <%= cp_comp[i].rank %> </p>
                                            <br>
                                        </div>
                                    <%}else{%>
                                        <div class="cp_comp" style="display: none;">
                                            <p><i class="fa-solid fa-trophy"></i> name: <%= cp_comp[i].name %> </p>
                                            <br>
                                            <p><i class="fa-solid fa-user"></i> host: <%= cp_comp[i].host %> </p>
                                            <br>
                                            <p><i class="fa-solid fa-medal"></i> rank: <%= cp_comp[i].rank %> </p>
                                            <br>
                                        </div>
                                    <%}%>
                                    <br>
                                <%}%>
                                <a href="#about" class="btn" id="loadMoreCP">See more</a>
                                
                                <p class="ps"><i class="fa-solid fa-brain"></i> Data Science Competitions</p>
                                <br>
                                <% for (let i=0; i<ds_comp.length; i++){%>
                                    <% if (i<3) {%>
                                        <div>
                                            <p><i class="fa-solid fa-trophy"></i> name: <%= ds_comp[i].name %> </p>
                                            <br>
                                            <p><i class="fa-solid fa-user"></i> host: <%= ds_comp[i].host %> </p>
                                            <br>
                                            <p><i class="fa-solid fa-medal"></i> rank: <%= ds_comp[i].rank %> </p>
                                            <br>
                                        </div>
                                    <%}else{%>
                                        <div class="ds_comp" style="display: none;">
                                            <p><i class="fa-solid fa-trophy"></i> name: <%= ds_comp[i].name %> </p>
                                            <br>
                                            <p><i class="fa-solid fa-user"></i> host: <%= ds_comp[i].host %> </p>
                                            <br>
                                            <p><i class="fa-solid fa-medal"></i> rank: <%= ds_comp[i].rank %> </p>
                                            <br>
                                        </div>
                                    <%}%>
                                <%}%>
                                <a href="#about" class="btn" id="loadMoreDS">See more</a>

                                <p class="ps"><i class="fa-solid fa-hat-cowboy"></i> CTF Competitions</p>
                                <br>
                                <% for (let i=0; i<ctf_comp.length; i++){%>
                                    <% if (i<3) {%>
                                        <div>
                                            <p><i class="fa-solid fa-trophy"></i> name: <%= ctf_comp[i].name %> </p>
                                            <br>
                                            <p><i class="fa-solid fa-medal"></i> host: <%= ctf_comp[i].host %> </p>
                                            <br>
                                            <p "><i class="fa-solid fa-medal"></i> rank: <%= ctf_comp[i].rank %> </p>
                                            <br>
                                        </div>
                                    <%}else{%>
                                        <div class="ctf_comp" style="display: none;">
                                            <p><i class="fa-solid fa-trophy"></i> name: <%= ctf_comp[i].name %> </p>
                                            <br>
                                            <p><i class="fa-solid fa-medal"></i> host: <%= ctf_comp[i].host %> </p>
                                            <br>
                                            <p><i class="fa-solid fa-medal"></i> rank: <%= ctf_comp[i].rank %> </p>
                                            <br>
                                        </div>
                                    <%}%>
                                    <br>
                                <%}%>
                                <a href="#about" class="btn" id="loadMoreCTF">See more</a>

                                <p class="ps"><i class="fa-solid fa-user"></i> Problem Solving Profiles</p>
                                <br>
                                <% for (let i=0; i<ps_profiles.length; i++){%>
                                    <a class="ds" href=<%= ps_profiles[i].link %> > <%= ps_profiles[i].host %> Profile</a>
                                <%}%> 
                            </li>
                        </ul>
                    </div>
                    <div class="tab-contents" id="education">
                        <ul>
                            <h2 class="acad_span">Formal Education</h2>
                            <%for (let i=0; i<education.length; i++){%>
                                <li>
                                    <h3 class="academia"><%= education[i].diplome %> Diploma</h3>
                                    <p class="description"><%= education[i].description %> @ <%= education[i].etab %></p>
                                </li>
                            <%}%>
                            <li>
                            <span>Online Certifications</span>
                                <% for (let i=0; i<certs.length; i++){%>
                                    <li>
                                        <%if(i<3){%>
                                            <div>
                                                <p class="description"><%= certs[i].cert_name %></p>
                                                <a class="cred" href=<%= certs[i].cert_url %>>Show credentials <i class="fa-solid fa-paperclip"></i></a>
                                            </div>
                                        <%}else{%>
                                            <div class="cert" style="display: none;">
                                                <p class="description"><%= certs[i].cert_name %></p>
                                                <a class="cred" href=<%= certs[i].cert_url %>>Show credentials <i class="fa-solid fa-paperclip"></i></a>
                                            </div>
                                        <%}%>
                                    </li>
                                <%}%>
                            </li>
                            <a href="#about" class="btn" id="loadMoreCerts">See more</a>
                        </ul>
                    </div>

                    <div class="tab-contents" id="books">
                        <ul>
                            <li>
                                <span>Technical Books</span>
                                <br><br>
                                <%for (let i=0; i<tkbooks.length; i++){%>
                                    <%if(i<3){%>
                                        <div class="book-loader">
                                            <a class="book" href=<%= tkbooks[i].link %>> <%= tkbooks[i].title %> <i class="fa-solid fa-book"></i></a>    
                                        </div>
                                    <%}else{%>
                                        <div class="book-loader tk" style="display: none;">
                                            <a class="book" href=<%= tkbooks[i].link %>> <%= tkbooks[i].title %> <i class="fa-solid fa-book"></i></a>    
                                        </div>
                                    <%}%>
                                <%}%>
                                <a href="#about" class="btn" id="loadMoreTechBooks">See more</a>       
                            </li>
                            <li>
                                <span>Non-Technical Books</span>
                                <br><br>
                                <%for (let i=0; i<ntkbooks.length; i++){%>
                                    <%if(i<3){%>
                                        <div class="book-loader">
                                            <a class="book" href=<%= ntkbooks[i].link %>> <%= ntkbooks[i].title %> <i class="fa-solid fa-book"></i></a>    
                                        </div>
                                    <%}else{%>
                                        <div class="book-loader ntk" style="display: none;">
                                            <a class="book" href=<%= ntkbooks[i].link %>> <%= ntkbooks[i].title %> <i class="fa-solid fa-book"></i></a>    
                                        </div>
                                        
                                    <%}%>
                                <%}%>
                                <a href="#about" class="btn" id="loadMoreNonTechBooks">See more</a>               
                            </li>
                        </ul>
                        
                    </div>

                </div>
            </div>
        </div>
    </div>

    <!-- services -->
